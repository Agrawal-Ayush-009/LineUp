<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountDownActivity">

    <include
        android:id="@+id/lin_lay"
        layout="@layout/lineup_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/lin_lay"
        app:layout_constraintStart_toStartOf="@id/lin_lay"
        android:src="@drawable/ic_welcome_img"
        app:layout_constraintTop_toBottomOf="@id/lin_lay"
        />

        <TextView
            android:id="@+id/countdown_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            app:layout_constraintTop_toBottomOf="@id/img1"
            app:layout_constraintStart_toStartOf="@id/lin_lay"
            app:layout_constraintEnd_toEndOf="@id/lin_lay"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:fontFamily="@font/neutrifpro_bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            tools:ignore="Hardcoded Text"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The event will begin at 12:00 p.m."
        app:layout_constraintStart_toStartOf="@id/countdown_timer"
        app:layout_constraintEnd_toEndOf="@id/countdown_timer"
        app:layout_constraintTop_toBottomOf="@id/countdown_timer"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stay Tuned :))"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="@id/text1"
        app:layout_constraintEnd_toEndOf="@id/text1"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>